//arrow functions = a concise way to write function expressions
//good for simple functions that vou use only once 
//const name = (parameters) => some code

const hello = (name, age) => {
    console.log(`Hello ${name}`);
    console.log(`You are ${age} years old.`);
}
hello("Eftelya",21);

setTimeout(() => {console.log("HELLO");},3000);

const numbers = [1,2,3,4,5,6];
const squares = numbers.map((Element) => {return Element ** 2;});
console.log(squares);

const evenNums = numbers.filter((Element) => {return Element % 2 === 0;});
console.log(evenNums);

const total = numbers.reduce((accumulator, Element) => {return accumulator + Element;});
console.log(total);
