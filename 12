//STRING METHODS
let username = "Eftelya  ";

//to get a character of the string. .charAt(positionNum)
console.log(username.charAt(0));

//to find where a char in a string is first occured. .indexOf("charName")
console.log(username.indexOf("t"));

//to find where a char in a string is last occured. .lastIndexOf("charName")
console.log(username.lastIndexOf("e"));

//to find the length. .length
console.log(username.length);

//to trim. .trim()
console.log(username.trim());

//to make all upper case. .toUpperCase()
console.log(username.toUpperCase());

//to make all lower case. .toLowerCase()
console.log(username.toLowerCase());

//to repeat x times. .repeat(x)
console.log(username.repeat(3));

//to check if it starts with a given character. .startsWith("characterName")
let result = username.startsWith(" ");
console.log(result);

//to check if it ends with a given character. .endsWith("characterName")
let result2 = username.endsWith(" ");
console.log(result2);

//to check if it includes with a given character. .includes("characterName")
let result3 = username.includes("l");
console.log(result3);

//to replace a char. replaceAll ("WhatYouWantToReplace","WhatYouWantToReplaceWith")
let PhoneNum = "123-456-78-90";
PhoneNum = PhoneNum.replaceAll("-","");
console.log(PhoneNum);

//if you want to make your string a certain length. 
//.padStart(length, "WhatYouWantTheEmptySpacesToBe")
//you can also you use padEnd
PhoneNum = PhoneNum.padStart(15,"0");
console.log(PhoneNum);

//String slicing : creating a substring. .slice(startIndex, endIndex + 1)
//if you will go to the end of the string, it is not necessary that you write endIndex + 1
let fullName ="Eftelya Sivridag";

//let firstName = fullName.slice(0,8) can be used but this is more dinamic.
let firstName = fullName.slice(0,fullName.indexOf(" "));

//let lastName = fullName.slice(8) can be used but this is more dinamic.
let lastName = fullName.slice(fullName.indexOf(" ") + 1);

let firstChar = fullName.slice(0,1);

//-1 means you start from the end
let lastChar = fullName.slice(-1);

console.log(firstName);
console.log(lastName);
console.log(firstChar);
console.log(lastChar);
